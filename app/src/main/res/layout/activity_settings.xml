<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <Switch
        android:id="@+id/switchmori"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/sr"
        android:layout_marginTop="90dp"
        android:showText="false"
        android:text="Select: "
        android:textSize="20sp" />


    <TextView
        android:id="@+id/metric"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="90dp"
        android:layout_marginStart="200dp"
        android:text="Metric"
        android:textSize="20sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/imperial"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="90dp"
        android:layout_marginStart="200dp"
        android:text="Imperial"
        android:textSize="20sp"
        android:textColor="#000000"/>


    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Settings"
        android:background="#4088ff"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:gravity="center_vertical"
        />

    <TextView
        android:id="@+id/sr"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="150dp"
        android:text="Search Radius Proximity: "
        android:textSize="20sp"
        android:textColor="#000000"/>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="180dp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="220dp"
        android:background="#adbdff" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="130dp"
        android:background="#adbdff" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="350dp"
        android:background="#adbdff" />

    <TextView
        android:id="@+id/longitude"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/sr"
        android:layout_marginTop="220dp"
        android:text="Input Longitude: "
        android:textColor="#000000"
        android:textSize="20sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/lat"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/sr"
        android:layout_marginTop="280dp"
        android:text="Input Latitude: "
        android:textColor="#000000"
        android:textSize="20sp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/longans"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/sr"
        android:layout_alignBottom="@+id/longitude"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/latans"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/sr"
        android:layout_alignBottom="@+id/lat"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/save"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/switchmori"
        android:layout_marginTop="450dp"
        android:text="Save" />

    <Button
        android:id="@+id/exit"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/sr"
        android:layout_alignBottom="@+id/save"
        android:text="Exit" />

    <Switch
        android:id="@+id/switchauto"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/switchmori"
        android:layout_marginTop="370dp"
        android:text="Auto Select Feature"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/autoon"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/sr"
        android:layout_alignBottom="@+id/switchauto"
        android:text="ON"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/autooff"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/sr"
        android:layout_alignBottom="@+id/switchauto"
        android:text="OFF"
        android:textSize="20sp"/>

</RelativeLayout>